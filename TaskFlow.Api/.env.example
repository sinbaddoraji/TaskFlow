# TaskFlow API Environment Variables

# Database Configuration
DATABASE__CONNECTIONSTRING=mongodb://localhost:27017
DATABASE__DATABASENAME=TaskFlowDb

# JWT Configuration - REQUIRED: Generate secure random keys
JWTSETTINGS__SECRETKEY=your-super-secure-jwt-secret-key-here-minimum-32-chars
JWTSETTINGS__ISSUER=TaskFlow.Api
JWTSETTINGS__AUDIENCE=TaskFlow.Frontend
JWTSETTINGS__EXPIRATIONINMINUTES=15
JWTSETTINGS__REFRESHTOKENEXPIRATIONINDAYS=7
JWTSETTINGS__MFASECRETKEY=your-super-secure-mfa-secret-key-here-minimum-32-chars
JWTSETTINGS__MFATOKENEXPIRATIONINMINUTES=5

# CORS Configuration (Frontend URLs)
CORS__ALLOWEDORIGINS__0=http://localhost:5173
CORS__ALLOWEDORIGINS__1=http://localhost:3000
CORS__ALLOWEDORIGINS__2=http://localhost:8080
CORS__ALLOWEDORIGINS__3=https://localhost:5173

# Password Policy
PASSWORDPOLICY__MINIMUMLENGTH=8
PASSWORDPOLICY__MAXIMUMLENGTH=128
PASSWORDPOLICY__REQUIREUPPERCASE=true
PASSWORDPOLICY__REQUIRELOWERCASE=true
PASSWORDPOLICY__REQUIREDIGIT=true
PASSWORDPOLICY__REQUIRESPECIALCHARACTER=true
PASSWORDPOLICY__SPECIALCHARACTERS=!@#$%^&*(),.?\":{}|<>
PASSWORDPOLICY__PASSWORDHISTORYCOUNT=5
PASSWORDPOLICY__PASSWORDEXPIRATIONDAYS=90
PASSWORDPOLICY__PREVENTCOMMONPASSWORDS=true
PASSWORDPOLICY__PREVENTUSERINFOINPASSWORD=true
PASSWORDPOLICY__MAXCONSECUTIVECHARACTERS=3